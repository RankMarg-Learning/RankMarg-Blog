generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Blog {
  id        String  @id @default(cuid())
  slug      String  @unique
  title     String
  content   String
  published Boolean @default(false)
  category  String?
  tags      String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
